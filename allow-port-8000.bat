@echo off
echo ========================================
echo Настройка файрвола для порта 8000
echo ========================================
echo.
echo Добавление правила для входящих подключений на порт 8000...
echo.

netsh advfirewall firewall add rule name="Түшүм Web Server" dir=in action=allow protocol=TCP localport=8000

if %errorlevel% == 0 (
    echo.
    echo ========================================
    echo УСПЕШНО! Порт 8000 разрешен
    echo ========================================
    echo.
    echo Правило файрвола добавлено:
    echo   Название: Түшүм Web Server
    echo   Порт: 8000
    echo   Протокол: TCP
    echo   Действие: Разрешить
    echo.
    echo Теперь сервер доступен из сети!
    echo.
) else (
    echo.
    echo ОШИБКА! Не удалось добавить правило файрвола
    echo Возможно, требуются права администратора
    echo.
    echo Попробуйте запустить этот файл от имени администратора:
    echo 1. Правой кнопкой мыши на файл
    echo 2. Выберите "Запуск от имени администратора"
    echo.
)

pause

